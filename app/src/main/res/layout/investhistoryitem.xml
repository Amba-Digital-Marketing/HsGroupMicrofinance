<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/fragment_background"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="10dp"

        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvpkgname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            android:text="Package name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="7dp"
            android:paddingLeft="7dp"

            android:layout_marginEnd="20dp"
            android:text="Status"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="@+id/tvpkgname"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvpkgname" />

        <TextView
            android:id="@+id/txtAmount"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Amount"
            app:layout_constraintStart_toStartOf="@+id/tvpkgname"
            app:layout_constraintTop_toBottomOf="@+id/tvpkgname" />

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/dark_green"
            app:layout_constraintBottom_toBottomOf="@+id/txtAmount"
            app:layout_constraintEnd_toEndOf="@+id/tvStatus"
            app:layout_constraintTop_toTopOf="@+id/txtAmount" />

        <TextView
            android:id="@+id/tv_return_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="return on 2021-10-22"
            app:layout_constraintStart_toStartOf="@+id/txtAmount"
            app:layout_constraintTop_toBottomOf="@+id/txtAmount" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>