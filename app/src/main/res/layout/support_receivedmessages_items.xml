<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/smallpadding">


    <TextView
        android:id="@+id/tvsentmessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/smallmargin"
        android:background="@drawable/message_send_shape"
        android:gravity="center"
        android:lineSpacingExtra="2dp"
        android:paddingLeft="10dp"
        android:paddingTop="4dp"
        android:paddingEnd="22dp"
        android:paddingBottom="10dp"
        android:text="firstmessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvsentTextOwner" />

    <TextView
        android:id="@+id/tvsentTextOwner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ian"
        android:textColor="@color/black"
        android:textSize="@dimen/largeTextSize"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvsentmessage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvadmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin"
        android:textColor="@color/black"
        android:textSize="@dimen/largeTextSize"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvreceivedmessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/smallmargin"
        android:layout_marginBottom="@dimen/smallmargin"
        android:background="@drawable/message_received_shape"
        android:gravity="center"
        android:lineSpacingExtra="2dp"
        android:paddingLeft="22dp"
        android:paddingTop="4dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="firstmessage"
        app:layout_constraintStart_toStartOf="@+id/tvadmin"
        app:layout_constraintTop_toBottomOf="@+id/tvadmin" />
</androidx.constraintlayout.widget.ConstraintLayout>